{
    "env": {
        "es6": true,
        "node": true
    },
    "parserOptions": {
        "sourceType": "module",
        "ecmaFeatures": {
            "modules": true
        }
    },
    "globals": {
        "define": true
    },
    "rules": {
        "no-undef": "error",
        "max-len": [
            "error",
            120
        ],
        "no-param-reassign": [
            "error",
            { "props": false }
        ],
        "no-unused-vars": [
            "error",
            {
                "args": "all",
                "argsIgnorePattern": "^_"
            }
        ],
        "no-constant-condition": [
            "error",
            {
                "checkLoops": false
            }
        ],
        "semi": [
            "error",
            "always"
        ],
        "semi-style": [
            "error",
            "last"
        ],
        "semi-spacing": [
            "error",
            {
                "before": false,
                "after": true
            }
        ],
        "eqeqeq": [
            "error",
            "always"
        ],
        "no-eval": "error",
        "no-unused-expressions": "error",
        "wrap-iife": [
            "error",
            "inside"
        ],
        "no-use-before-define": [
            "error",
            {
                "functions": false,
                "classes": false
            }
        ],
        "no-loop-func": "error",
        "no-caller": "error",
        "no-shadow": [
            "error",
            {
                "builtinGlobals": true,
                "allow": [ "Promise" ]
            }
        ],
        "no-shadow-restricted-names": "error",
        "no-extend-native": "error",
        "new-cap": [
            "error",
            {
                "capIsNew": false
            }
        ],
        "no-new": "error",
        "no-multi-str": "error",
        "no-multiple-empty-lines": [
            "error",
            {
                "max": 1,
                "maxEOF": 1
            }
        ],
        "dot-location": [
            "error",
            "property"
        ],
        "quote-props": [
            "error",
            "as-needed"
        ],
        "spaced-comment": [
            2,
            "always"
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "curly": [
            "error",
            "all"
        ],
        "space-before-blocks": [
            "error",
            "always"
        ],
        "space-in-parens": [
            "error",
            "never"
        ],
        "comma-style": [
            "error",
            "last"
        ],
        "space-unary-ops": [
            "error",
            {
                "words": true,
                "nonwords": false
            }
        ],
        "space-infix-ops": "error",
        "no-with": "error",
        "no-trailing-spaces": "error",
        "eol-last": "error",
        "key-spacing": [ "error", { "beforeColon": false, "afterColon": true, "mode": "minimum" } ],
        "indent": [
            "error",
            4,
            {
                "FunctionDeclaration": { "parameters": "first", "body": 1 },
                "FunctionExpression": { "parameters": "first", "body": 1 },
                "CallExpression": { "arguments": "first" },
                "ArrayExpression": "first",
                "ObjectExpression": "first",
                "SwitchCase": 1,
                "MemberExpression": 1
            }
        ],
        "func-call-spacing": "error",
        "no-whitespace-before-property": "error",
        "arrow-spacing": [
            "error",
            {
                "before": true,
                "after": true
            }
        ],
        "comma-spacing": "error",
        "object-curly-spacing": [
            "error",
            "always"
        ],
        "no-unneeded-ternary": [
            "error",
            {
                "defaultAssignment": false
            }
        ],
        "no-nested-ternary": "error",
        "operator-linebreak": [
            "error",
            "after"
        ],
        "keyword-spacing": [
            "error",
            {
                "before": true,
                "after": true
            }
        ],
        "space-before-function-paren": [
            "error",
            {
                "anonymous": "never",
                "named": "never",
                "asyncArrow": "always"
            }
        ],
        "array-bracket-spacing": [
            "error",
            "always",
            {
                "singleValue": true,
                "objectsInArrays": false,
                "arraysInArrays": false
            }
        ],
        "comma-dangle": [
            "error",
            "never"
        ],
        "brace-style": [ "error", "1tbs" ],
        "quotes": [
            "error",
            "single"
        ],
        "no-var": [
            "error"
        ],
        "object-shorthand": [
            "error",
            "properties"
        ]
    }
}
