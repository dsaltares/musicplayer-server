{
    "name": "musicplayer-server",
    "version": "1.0.0",
    "description": "Backend for a basic music player",
    "scripts": {
        "test": "jest",
        "coverage": "jest --coverage",
        "lint": "eslint .",
        "start": "node src/server.js"
    },
    "devDependencies": {
        "eslint": "^5.15.1",
        "jest": "^24.3.1"
    },
    "dependencies": {
        "express": "^4.16.4",
        "music-metadata": "^3.5.2"
    },
    "jest": {
        "collectCoverage": true,
        "coverageReporters": [
            "json",
            "lcov",
            "text",
            "clover",
            "html"
        ],
        "collectCoverageFrom": [
            "**/*.js",
            "!**/*.test.js",
            "!**/node_modules/**",
            "!**/coverage/**"
        ]
    }
}
